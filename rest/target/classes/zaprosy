CREATE TABLE authorities
(
    username VARCHAR(256),
    authority VARCHAR(256)
);
CREATE TABLE backet
(
    id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    food INT NOT NULL,
    id_food INT NOT NULL,
    price DECIMAL(8,2),
    quantity VARCHAR(10),
    name VARCHAR(100),
    s_name VARCHAR(100),
    address VARCHAR(100),
    post_index VARCHAR(100),
    email VARCHAR(100),
    date DATE,
    time TIME
);
CREATE TABLE category
(
    cat_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    name VARCHAR(100) NOT NULL,
    res_id INT NOT NULL,
    tags VARCHAR(30),
    FOREIGN KEY (res_id) REFERENCES restaurant (res_id)
);
CREATE INDEX f ON category (res_id);
CREATE TABLE customer
(
    customer_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    name VARCHAR(100) NOT NULL,
    fname VARCHAR(100) NOT NULL,
    lname VARCHAR(100) NOT NULL,
    country VARCHAR(20),
    city VARCHAR(20),
    address VARCHAR(100),
    location VARCHAR(100),
    fax VARCHAR(30),
    phone VARCHAR(30),
    postal_code VARCHAR(10),
    email VARCHAR(30)
);
CREATE TABLE customization
(
    cus_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    name VARCHAR(100) NOT NULL,
    price DOUBLE(4,2),
    added TINYINT,
    prod_id INT NOT NULL,
    FOREIGN KEY (prod_id) REFERENCES product (prod_id)
);
CREATE INDEX c ON customization (prod_id);
CREATE TABLE open_hour
(
    open_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    day VARCHAR(100) NOT NULL,
    open_hour TIME,
    close_hour TIME,
    restaurant_res_id INT,
    FOREIGN KEY (restaurant_res_id) REFERENCES restaurant (res_id)
);
CREATE INDEX FK_kg6c0hphuqtkyjghthn9mwt2a ON open_hour (restaurant_res_id);
CREATE TABLE order_details
(
    id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    title VARCHAR(40),
    unit_price DOUBLE,
    quantity INT,
    description LONGTEXT,
    prod_id INT,
    order_id INT NOT NULL,
    FOREIGN KEY (order_id) REFERENCES orders (order_id)
);
CREATE INDEX ord_det ON order_details (order_id);
CREATE TABLE orders
(
    order_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    employee_id INT,
    order_day DATE,
    order_time TIME,
    req_time TIME,
    req_day DATE,
    ship_via VARCHAR(20),
    order_amount VARCHAR(10) NOT NULL,
    customer_id INT NOT NULL,
    order_products LONGTEXT NOT NULL,
    user_id VARCHAR(30) NOT NULL,
    FOREIGN KEY (customer_id) REFERENCES customer (customer_id)
);
CREATE INDEX o ON orders (customer_id);
CREATE TABLE persons
(
    ID INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    LastName VARCHAR(255) NOT NULL,
    FirstName VARCHAR(255),
    Address VARCHAR(255),
    City VARCHAR(255),
    Mobile VARCHAR(20),
    Login VARCHAR(255),
    Password VARCHAR(255)
);
CREATE TABLE product
(
    prod_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    title VARCHAR(100) NOT NULL,
    img_url VARCHAR(100),
    price DOUBLE(4,2),
    description LONGTEXT,
    tags VARCHAR(100),
    discount INT,
    cus_id INT NOT NULL,
    sup_id INT NOT NULL,
    type_id INT NOT NULL,
    cat_id INT NOT NULL,
    discout INT,
    FOREIGN KEY (cat_id) REFERENCES category (cat_id)
);
CREATE INDEX p ON product (cat_id);
CREATE TABLE product_options
(
    prod_id INT NOT NULL,
    opt_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    name VARCHAR(20),
    isRequired TINYINT,
    isFree TINYINT,
    isOne TINYINT
);
CREATE TABLE product_options_item
(
    optd_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    opt_id INT NOT NULL,
    name VARCHAR(20),
    price DOUBLE(4,2),
    FOREIGN KEY (opt_id) REFERENCES product_options (opt_id)
);
CREATE INDEX po ON product_options_item (opt_id);
CREATE TABLE restaurant
(
    res_id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
    title VARCHAR(100),
    slug VARCHAR(100),
    tags VARCHAR(50),
    description LONGTEXT,
    logo_image_url VARCHAR(50),
    header_image_url VARCHAR(50),
    cover_image_url VARCHAR(50),
    status VARCHAR(10),
    country VARCHAR(20),
    city VARCHAR(20),
    address VARCHAR(100),
    location VARCHAR(100),
    fax VARCHAR(30),
    phone VARCHAR(30),
    postal_code VARCHAR(10),
    open_id INT,
    ratings INT,
    user_id VARCHAR(100)
);
CREATE TABLE users
(
    username VARCHAR(256) PRIMARY KEY NOT NULL,
    password VARCHAR(256),
    enabled TINYINT,
    email VARCHAR(30),
    phone VARCHAR(15),
    postal_code VARCHAR(10),
    country VARCHAR(20),
    city VARCHAR(20),
    address VARCHAR(30),
    location VARCHAR(100),
    role VARCHAR(10),
    firstname VARCHAR(30),
    secondname VARCHAR(30),
    lastname VARCHAR(30),
    roles VARCHAR(255),
    user_id VARCHAR(30)
);
CREATE UNIQUE INDEX username ON users (username);
